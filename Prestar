  <script src="https://www.youtube.com/iframe_api"></script>
  <script>
    var player;

    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {
        height: '100%',
        width: '100%',
        videoId: 'wE-ZALg0nJA',
        playerVars: {
          autoplay: 1,
          controls: 1
        },
        events: {
          'onReady': onPlayerReady,
          'onStateChange': onPlayerStateChange
        }
      });
    }

    function onPlayerReady(event) {
      // No es necesario llamar a event.target.playVideo() aquí si se desea reproducción automática
    }

    function onPlayerStateChange(event) {
      if (event.data === YT.PlayerState.ENDED) {
        setTimeout(showPopupOverlay, 2000); // Retraso de 2 segundos (2000 milisegundos) antes de mostrar la ventana emergente
      }
    }

    function showPopupOverlay() {
      var popupOverlay = document.querySelector('.popup-overlay');
      popupOverlay.classList.add('show');
    }
  </script>
